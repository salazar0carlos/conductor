# AI Logo Maker - Environment Variables
# Copy these to your .env.local file

# ============================================
# OpenAI Configuration (for DALL-E 3)
# ============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# ============================================
# Replicate Configuration (for Stable Diffusion XL)
# ============================================
# Get your API key from: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=r8_...

# ============================================
# Midjourney Configuration (Optional)
# ============================================
# Requires Midjourney subscription and Discord bot setup
# Or use official Midjourney API when available
MIDJOURNEY_API_KEY=...
MIDJOURNEY_DISCORD_TOKEN=...

# ============================================
# Ideogram Configuration (Optional)
# ============================================
# Get your API key from: https://ideogram.ai/api
IDEOGRAM_API_KEY=...

# ============================================
# Leonardo.ai Configuration (Optional)
# ============================================
# Get your API key from: https://leonardo.ai/api
LEONARDO_API_KEY=...

# ============================================
# Supabase Configuration (Required)
# ============================================
# These should already be set in your main .env.local
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# ============================================
# Optional: Image Storage Configuration
# ============================================
# For storing generated logos (alternatives to Supabase Storage)
# AWS_S3_BUCKET=...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# CLOUDINARY_CLOUD_NAME=...
# CLOUDINARY_API_KEY=...
# CLOUDINARY_API_SECRET=...

# ============================================
# Optional: Usage Limits & Monetization
# ============================================
# Set generation limits per user
MAX_GENERATIONS_PER_DAY=50
MAX_BATCH_SIZE=16
FREE_TIER_GENERATIONS=5

# Enable cost tracking
ENABLE_COST_TRACKING=true

# Markup percentage on AI costs (for monetization)
PRICE_MARKUP_PERCENTAGE=100

# ============================================
# Optional: Feature Flags
# ============================================
ENABLE_MIDJOURNEY=false
ENABLE_IDEOGRAM=false
ENABLE_LEONARDO=false
ENABLE_VECTORIZATION=false
ENABLE_BACKGROUND_REMOVAL=false
ENABLE_MOCKUP_GENERATOR=true

# ============================================
# Optional: Rate Limiting
# ============================================
# Using Upstash Redis (already configured in main app)
RATE_LIMIT_GENERATIONS_PER_MINUTE=10
RATE_LIMIT_GENERATIONS_PER_HOUR=100

# ============================================
# Development Settings
# ============================================
# Use placeholder/mock data instead of real API calls
USE_MOCK_GENERATION=false

# Log API costs to console
LOG_API_COSTS=true

# Enable debug mode
DEBUG_LOGO_MAKER=false
